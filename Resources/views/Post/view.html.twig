<h1>{{ post.title }}</h1>

<div>
    {{ post.content }}
</div>


{% render 'SonataNewsBundle:Post:comments' with {'post_id': post.id} %}

{% if post.iscommentable %}
    {% render 'SonataNewsBundle:Post:addCommentForm' with {
        'post_id': post.id,
        'form': form
    } %}
{% else %}
    <div>
        {{ 'message_comments_are_closed'|trans({}, 'NewsBundle') }}
    </div>
{% endif %}