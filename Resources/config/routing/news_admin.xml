<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <!-- NEWS CONTROLLER -->
    <route id="sonata_news_post_admin_list" pattern="/post">
        <default key="_controller">Sonata\NewsBundle:PostAdmin:list</default>
    </route>

    <route id="sonata_news_post_admin_create" pattern="/post/create">
        <default key="_controller">Sonata\NewsBundle:PostAdmin:create</default>
    </route>

    <route id="sonata_news_post_admin_batch" pattern="/post/batch">
        <default key="_controller">Sonata\NewsBundle:PostAdmin:batch</default>
    </route>

    <route id="sonata_news_post_admin_update" pattern="/post/update">
        <default key="_controller">Sonata\NewsBundle:PostAdmin:update</default>
    </route>

    <route id="sonata_news_post_admin_edit" pattern="/post/:id/edit">
        <default key="_controller">Sonata\NewsBundle:PostAdmin:edit</default>
    </route>

    <route id="sonata_news_post_admin_delete" pattern="/post/:id/delete">
        <default key="_controller">Sonata\NewsBundle:PostAdmin:delete</default>
    </route>


    <!-- TAG CONTROLLER -->
    <route id="sonata_news_tag_admin_list" pattern="/tag">
        <default key="_controller">Sonata\NewsBundle:TagAdmin:list</default>
    </route>

    <route id="sonata_news_tag_admin_create" pattern="/tag/create">
        <default key="_controller">Sonata\NewsBundle:TagAdmin:create</default>
    </route>

    <route id="sonata_news_tag_admin_batch" pattern="/tag/batch">
        <default key="_controller">Sonata\NewsBundle:TagAdmin:batch</default>
    </route>

    <route id="sonata_news_tag_admin_update" pattern="/tag/update">
        <default key="_controller">Sonata\NewsBundle:TagAdmin:update</default>
    </route>

    <route id="sonata_news_tag_admin_edit" pattern="/tag/:id/edit">
        <default key="_controller">Sonata\NewsBundle:TagAdmin:edit</default>
    </route>

    <route id="sonata_news_tag_admin_delete" pattern="/delete/:id/delete">
        <default key="_controller">Sonata\NewsBundle:TagAdmin:delete</default>
    </route>

    <!-- COMMENT CONTROLLER -->
    <route id="sonata_news_comment_admin_list" pattern="/comment">
        <default key="_controller">Sonata\NewsBundle:CommentAdmin:list</default>
    </route>

    <route id="sonata_news_comment_admin_create" pattern="/comment/create">
        <default key="_controller">Sonata\NewsBundle:CommentAdmin:create</default>
    </route>

    <route id="sonata_news_comment_admin_batch" pattern="/comment/batch">
        <default key="_controller">Sonata\NewsBundle:CommentAdmin:batch</default>
    </route>

    <route id="sonata_news_comment_admin_update" pattern="/comment/update">
        <default key="_controller">Sonata\NewsBundle:CommentAdmin:update</default>
    </route>

    <route id="sonata_news_comment_admin_edit" pattern="/comment/:id/edit">
        <default key="_controller">Sonata\NewsBundle:CommentAdmin:edit</default>
    </route>

    <route id="sonata_news_comment_admin_delete" pattern="/comment/:id/delete">
        <default key="_controller">Sonata\NewsBundle:CommentAdmin:delete</default>
    </route>
    
</routes>
